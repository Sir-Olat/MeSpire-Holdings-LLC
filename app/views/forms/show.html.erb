<% provide(:page_title, "#{@form.name} Profile Details") %>
<% provide(:application_active, 'active') %>

<div class="row ">
  <div class="col s12 m6">
    <div class="card center center-align">
      <div class="card-content">

      <ul class="collection with-header">
        <li class="collection-header"><h4>Candidate Details</h4></li>
        <li class="collection-item">Name: <%= @form.name %> </li>
        <li class="collection-item">Address: <%= @form.address %></li>
        <li class="collection-item">Date of Birth: <%= @form.dob.strftime('%-b %-d,%Y') %> </li>
        <li class="collection-item">Email: <%= @form.email %></li>
        <li class="collection-item">Mobile Number: <%= number_to_phone @form.mobile_number %> </li>
        <li class="collection-item">Position Applied for: <%= @form.position %>  </li>
        <li class="collection-item">Referee:
          <% if @form.reference.blank? %>
              No Referee
          <% else %>
              <%= @form.reference %>
          <% end %>
        </li>
        <li class="collection-item">LinkedIn Profile Link: <%= link_to 'Check LinkedIn Profile', @form.linkedin_url %></li>
        <li class="collection-item">CV/Other Documents: <%= link_to @form.document_file_name, @form.document(:original, false), target: "_blank" %></li>

      </ul>
      </div>
    </div>
  </div>
</div>



